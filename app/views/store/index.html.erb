<h1>Smart Phone Store</h1>
<p>Elije aqui tu smart robado</p>

<div id="smarts">

<% @smarts.each do |smart| %>

<div class="smart">
  <div class="image" >
   <%= image_tag(smart.image_url) %>
  </div>

  <div class="content">
    <h2 class="smart_name">
      <%= smart.name %>
    </h2>
    <%= smart.description %>
  </div>

  <div class="price">
    <div>
      <%= smart.price %>
    </div>
    <div>
      <%= button_to "Comprar", line_items_path(:smart_id => smart.id), :remote => true %>
    </div>
  </div>

  <div class="clear"></div>

</div>

<% end %>

</div>